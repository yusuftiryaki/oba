{
  "robot": {
    "name": "OBA Robot",
    "version": "1.0.0",
    "hardware_revision": "Rev A"
  },
  "battery": {
    "low_threshold": 20,
    "critical_threshold": 15,
    "full_threshold": 95,
    "capacity_ah": 20,
    "voltage_nominal": 24,
    "cells": 8,
    "chemistry": "LiFePO4"
  },
  "mowing": {
    "speed": 0.5,
    "pattern": "lawn_mower",
    "blade_height_levels": [3, 5, 7, 9, 11],
    "default_height_level": 2,
    "overlap": 0.1,
    "max_slope": 15
  },
  "charging_station": {
    "position": {
      "x": 0,
      "y": 0
    },
    "detection_range": 100,
    "docking_precision": 0.01,
    "approach_speed": 0.1,
    "final_approach_speed": 0.02
  },
  "navigation": {
    "wheel_base": 0.5,
    "wheel_diameter": 0.2,
    "encoder_ticks_per_rev": 1000,
    "max_speed": 1.0,
    "max_angular_speed": 1.0,
    "position_tolerance": 0.1,
    "heading_tolerance": 0.05
  },
  "safety": {
    "max_slope": 15,
    "obstacle_detection": true,
    "emergency_stop_enabled": true,
    "timeout_seconds": 5.0,
    "max_runtime_hours": 8
  },
  "camera": {
    "resolution": {
      "width": 640,
      "height": 480
    },
    "fps": 10,
    "quality": "medium",
    "auto_exposure": true
  },
  "web_server": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "secret_key": "oba_robot_secret_key_2025"
  },
  "logging": {
    "level": "INFO",
    "max_file_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
